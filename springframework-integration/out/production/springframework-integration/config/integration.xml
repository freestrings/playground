<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-http="http://www.springframework.org/schema/integration/http"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/integration
        http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/integration/http
		http://www.springframework.org/schema/integration/http/spring-integration-http.xsd">

    <!--

    TODO 지저분하다 annotation으로..

    -->

    <int:channel id="inHttp"/>

    <int:gateway default-request-channel="inHttp"
                 service-interface="fs.ServiceGateway">

        <int:method name="getA">
            <int:header name="routePath" value="a"/>
        </int:method>

        <int:method name="getB">
            <int:header name="routePath" value="b"/>
        </int:method>

    </int:gateway>

    <int-http:outbound-gateway request-channel="inHttp"
                               http-method="GET"
                               expected-response-type="java.lang.String"
                               url="${fs.outboundUrl}/{routePath}">

        <int-http:uri-variable name="routePath" expression="headers.routePath"/>

    </int-http:outbound-gateway>

</beans>
